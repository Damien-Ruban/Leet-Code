class Solution:
    def lengthOfLongestSubstring(self, s: str) -> int:
        if not s:
            return 0
        seen = set()
        best = 0
        left = 0
        for right, letter in enumerate(s):
            while letter in seen:
                seen.remove(s[left])
                left += 1
            current = (right - left)
            seen.add(letter)

            if current > best:
                best = current
        return best + 1
