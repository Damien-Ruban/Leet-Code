class Solution:
    def reverse(self, x: int) -> int:
        if not (-2**31 <= x < 2**31):
            return 0
        sign = 1 if x >= 0 else -1
        str_x = str(abs(x))
        x_reversed = sign * int(str_x[::-1])
        if not (-2**31 <= x_reversed < 2**31):
            return 0
        return x_reversed
        
