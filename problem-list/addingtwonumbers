# Definition for singly-linked list.
# class ListNode:
#     def __init__(self, val=0, next=None):
#         self.val = val
#         self.next = next
class Solution:
    def addTwoNumbers(self, l1: Optional[ListNode], l2: Optional[ListNode]) -> Optional[ListNode]:
        carry = 0
        val = 0
        combined = l1.val + l2.val
        if combined >= 10:
            carry = 1
            combined -= 10
        combined_node = ListNode(combined)
        first_node = combined_node
        
        current_l1 = l1.next
        current_l2 = l2.next
        
        while current_l1 or current_l2 or carry != 0:
            combined = carry
            carry = 0
            combined += current_l1.val if current_l1 else 0 
            combined += current_l2.val if current_l2 else 0
            if combined >= 10:
                carry = 1
                combined -= 10
            combined_node.next = ListNode(combined)
            combined_node = combined_node.next
            current_l1 = current_l1.next if current_l1 != None else None
            current_l2 = current_l2.next if current_l2 != None else None
        return first_node
        
